@model object
@{
    var containerClass = ViewData["container_class"] ?? "form-group";
}
<div class="@containerClass">
    @if (ViewData["label"] != null)
    {
        <span class="list__label">@ViewData["label"]</span>
    }
    else
    {
        <span class="list__label">@Html.DisplayNameForModel()</span>
    }
    <div class="list__output">@Model</div>
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>