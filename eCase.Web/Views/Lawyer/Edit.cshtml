@model eCase.Web.Models.Lawyer.LawyerEditVM

@Html.Breadcrumb(new List<BreadcrumbItem>()
{
    new BreadcrumbItem(Url.Action(MVC.Home.ActionNames.Index, MVC.Home.Name), "Начало"),
    new BreadcrumbItem(Url.Action(MVC.Lawyer.ActionNames.Search, MVC.Lawyer.Name), "Регистър адвокати")
}, "Редакция")

<!-- SEARCH PANEL -->
<div class="search-panel narrow-fields clearfix">
    <div class="title">
        <span>Редакция на</span>
        <strong>адвокат</strong>
    </div>
    <div class="search-form-wrapper">
        <form class="search-form" method="post">
            @if (!ViewContext.ViewData.ModelState.IsValid)
            {
                <!-- VALIDATION -->
                <div class="rw">
                    <div class="lbl"></div>
                    <div class="vl">
                        @Html.ValidationSummary()
                    </div>
                </div>
            }

            @Html.HiddenFor(m => m.Gid)

            @Html.AntiForgeryToken()
            <div class="rw">
                <div class="lbl">Номер:</div>
                <div class="vl">
                    @Html.TextBoxFor(m => m.Number)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Име:</div>
                <div class="vl">
                    @Html.TextBoxFor(m => m.Name)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Вид адвокат:</div>
                <div class="vl">
                    @Html.DropDownListFor(m => m.LawyerTypeId, Model.LawyerTypes, "", new { @class = "select2" })
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Колегия:</div>
                <div class="vl">
                    @Html.TextBoxFor(m => m.College)
                </div>
            </div>

            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                    <input type="submit" class="search-submit" value="ЗАПАЗИ" />
                </div>
            </div>
        </form>
    </div>
</div>