@model eCase.Web.Models.Account.ActivateVM

@Html.Breadcrumb(new List<BreadcrumbItem>()
{
    new BreadcrumbItem(Url.Action(MVC.Home.ActionNames.Index, MVC.Home.Name), "Начало")
}, "Активиране на профил")

<div class="search-panel clearfix">
    <div class="title">
        <span>Активиране на</span>
        <span>профил</span>
    </div>
    <div class="search-form-wrapper">
        <form class="search-form" method="POST">
            <!-- VALIDATION -->
            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                    @Html.ValidationSummary()
                    @Html.HiddenFor(m => m.UserGid)
                </div>
            </div>

            <div class="rw">
                <div class="lbl">Парола:</div>
                <div class="vl">
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Въведи паролата повторно:</div>
                <div class="vl">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Рождена дата:</div>
                <div class="vl">
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "datepicker" })
                </div>
            </div>
            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                    <input type="submit" class="search-submit" value="ПРОДЪЛЖИ">
                </div>
            </div>
        </form>
    </div>
</div>