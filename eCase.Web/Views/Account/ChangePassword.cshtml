@model eCase.Web.Models.Account.ChangePasswordVM

@Html.Breadcrumb(new List<BreadcrumbItem>()
{
    new BreadcrumbItem(Url.Action(MVC.Home.ActionNames.Index, MVC.Home.Name), "Начало")
}, "Смяна на парола")

<div class="search-panel clearfix">
    <div class="title">
        <span>Смяна на</span>
        <span>парола</span>
    </div>
    <div class="search-form-wrapper">
        <form class="search-form" method="POST">
            <!-- VALIDATION -->
            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                   @Html.ValidationSummary()
                </div>
            </div>
            
            <div class="rw">
                <div class="lbl">Стара парола:</div>
                <div class="vl">
                    @Html.PasswordFor(m => m.OldPassword)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Нова парола:</div>
                <div class="vl">
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Въведи новата парола повторно:</div>
                <div class="vl">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                    <input type="submit" class="search-submit" value="ЗАПИС">
                </div>
            </div>
        </form>
    </div>
</div>
